project_name: soc_aoa_asset_tag
package: Bluetooth
label: Bluetooth - SoC AoA Asset Tag
description: >-
  This sample app demonstrates a CTE (Constant Tone Extension) transmitter
  that can be used as an asset tag in a direction finding setup estimating
  Angle of Arrival (AoA).
category: Bluetooth AoX Examples
quality: production

component:
  - id: bluetooth_stack
  - id: gatt_configuration
  - id: bluetooth_feature_advertiser
  - id: bluetooth_feature_connection
  - id: bluetooth_feature_gatt
  - id: bluetooth_feature_gatt_server
  - id: bluetooth_feature_scanner
  - id: bluetooth_feature_sm
  - id: bluetooth_feature_system
  - id: ota_dfu
  - id: bootloader_interface
  - id: rail_util_pti
  - id: app_assert
  - id: component_catalog
  - id: mpu
  - id: gatt_service_cte
  - id: gatt_service_cte_silabs
  - id: app_log
  - id: iostream_usart
    instance:
      - vcom
  - id: iostream_retarget_stdio

source:
  - path: main.c
  - path: app.c
  - path: app_properties.c

include:
  - path: .
    file_list:
    - path: app.h

config_file:
  - override:
      component: gatt_configuration
      file_id: gatt_configuration_file_id
    path: gatt_configuration.btconf
    directory: btconf

readme:
  - path: ../../documentation/example/soc_aoa_asset_tag/readme.html

other_file:
  - path: ../../script/create_bl_files.bat
  - path: ../../script/create_bl_files.sh
  - path: ../../documentation/example/soc_aoa_asset_tag/readme_img0.png
    folder: images
  - path: ../../documentation/example/soc_aoa_asset_tag/readme_img1.png
    folder: images
  - path: ../../documentation/example/soc_aoa_asset_tag/readme_img2.png
    folder: images

configuration:
  - name: SL_STACK_SIZE
    value: "2752"
  - name: SL_HEAP_SIZE
    value: "9200"
  - name: SL_BOARD_ENABLE_VCOM
    value: "1"
    condition:
      - iostream_usart
  - name: SL_PSA_KEY_USER_SLOT_COUNT
    value: "0"
    condition:
      - psa_crypto

tag:
  - prebuilt_demo
  - hardware:rf:band:2400

ui_hints:
  highlight:
    - path: config/btconf/gatt_configuration.btconf
    - path: readme.html
      focus: true
